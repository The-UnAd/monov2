{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es2015",
    "outDir": "build",
    "rootDir": "src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
  },
  "include": [
    "src"
  ]
}
